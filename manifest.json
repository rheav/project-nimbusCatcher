{
  "manifest_version": 3,
  "name": "nimbusCatcher",
  "description": "nimbusCatcher te ajuda a entender melhor os scripts e tags que s√£o carregados em sua loja.",
  "author": "Rhea Victor",
  "version": "2.0",
  "action": {
    "default_popup": "index.html"
  },

  "permissions": ["tabs", "activeTab", "scripting", "storage"],

  "icons": {
    "16": "src/assets/logo/icon16.png",
    "32": "src/assets/logo/icon32.png",
    "48": "src/assets/logo/icon48.png",
    "128": "src/assets/logo/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}
